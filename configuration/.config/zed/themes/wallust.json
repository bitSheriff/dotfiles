                "info.border": "#9E934D",

                "hint": "#BBBABE",
                "hint.background": "#262627",
                "hint.border": "#BBBABE",

                // Git status colors
                "created": "#705F55",
                "created.background": "#221D1A",
                "created.border": "#705F55",

                "modified": "#857BB3",
                "modified.background": "#272432",
                "modified.border": "#857BB3",

                "deleted": "#294023",
                "deleted.background": "#10150E",
                "deleted.border": "#294023",

                "renamed": "#9E934D",
                "renamed.background": "#2D2A18",
                "renamed.border": "#9E934D",

                "conflict": "#CA8A72",
                "conflict.background": "#382822",
                "conflict.border": "#CA8A72",

                "ignored": "#A4A2A6",
                "ignored.background": "#1A191A",
                "ignored.border": "#A4A2A6",

                "hidden": "#8C8B8E",
                "hidden.background": "transparent",
                "hidden.border": "#8C8B8E",

                "predictive": "#A4A2A6",
                "predictive.background": "#1A191A",
                "predictive.border": "#A4A2A6",

                "unreachable": "#757477",
                "unreachable.background": "#1D1B1B",
                "unreachable.border": "#757477",

                // Link styling
                "link_text.hover": "#A89E5F",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
