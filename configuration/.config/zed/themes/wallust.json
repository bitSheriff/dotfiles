
/*
## How to Install the Zed Theme

1. Copy this template to your wallust templates folder:

2. Add this section to your wallust.toml file:
    ```
      [templates.zed_theme]
      template = "zed.json"
      target = "~/.config/zed/themes/wallust.json"
    ```

3. Generate the theme: Run wallust to generate the theme from your current wallpaper:
   ```bash
     wallust run /path/to/your/wallpaper.jpg
   ```

4. Select the theme in Zed:
   - Press `Cmd+Shift+P` (macOS) or `Ctrl+Shift+P` (Linux) to open the command palette
   - Type "theme selector" and select it
   - Choose "Wallust" from the theme list
*/
{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#161414",
                "text": "#EAE8ED",
                "text.muted": "#BBBABE",
                "text.placeholder": "#A4A2A6",
                "text.disabled": "#8C8B8E",
                "text.accent": "#9E934D",

                // Icon colors - match text hierarchy
                "icon": "#EAE8ED",
                "icon.muted": "#BBBABE",
                "icon.disabled": "#8C8B8E",
                "icon.placeholder": "#A4A2A6",
                "icon.accent": "#9E934D",

                // Border colors - subtle but visible
                "border": "#5E5D5F",
                "border.variant": "#464647",
                "border.focused": "#9E934D",
                "border.selected": "#9E934D",
                "border.transparent": "#00000000",
                "border.disabled": "#2F2E2F",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#161414",
                "elevated_surface.background": "#2D2C2C",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#333234",
                "element.active": "#36321D",
                "element.selected": "#2D2A18",
                "element.disabled": "#222020",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1A191A",
                "ghost_element.active": "#333234",
                "ghost_element.selected": "#1B190E",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#3F3B22",

                // Application frame elements
                "status_bar.background": "#222020",
                "title_bar.background": "#161414",
                "title_bar.inactive_background": "#1D1B1B",
                "toolbar.background": "#161414",

                // Side panels
                "panel.background": "#161414",
                "panel.focused_border": "#9E934D",

                // Editor panes
                "pane.focused_border": "#9E934D",
                "pane_group.border": "#5E5D5F",

                // Tab bar and tabs
                "tab_bar.background": "#222020",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#161414",

                // Main editor area
                "editor.background": "#161414",
                "editor.foreground": "#EAE8ED",
                "editor.gutter.background": "#161414",
                "editor.subheader.background": "#222020",
                "editor.active_line.background": "#1A191A",
                "editor.highlighted_line.background": "#1F1D28",
                "editor.line_number": "#8C8B8E",
                "editor.active_line_number": "#EAE8ED",
                "editor.invisible": "#757477",
                "editor.wrap_guide": "#5E5D5F",
                "editor.active_wrap_guide": "#8C8B8E",
                "editor.indent_guide": "#5E5D5F",
                "editor.indent_guide_active": "#8C8B8E",
                "editor.document_highlight.read_background": "#272432",
                "editor.document_highlight.write_background": "#10150E",
                "editor.document_highlight.bracket_background": "#2D2A18",

                // Integrated terminal
                "terminal.background": "#161414",
                "terminal.foreground": "#EAE8ED",
                "terminal.bright_foreground": "#ECEAEF",
                "terminal.dim_foreground": "#BBBABE",
                "terminal.ansi.background": "#161414",
                "terminal.ansi.black": "#3D3B3B",
                "terminal.ansi.red": "#294023",
                "terminal.ansi.green": "#705F55",
                "terminal.ansi.yellow": "#857BB3",
                "terminal.ansi.blue": "#9E934D",
                "terminal.ansi.magenta": "#CA8A72",
                "terminal.ansi.cyan": "#C2BECB",
                "terminal.ansi.white": "#D8D6DD",
                "terminal.ansi.bright_black": "#97969A",
                "terminal.ansi.bright_red": "#294023",
                "terminal.ansi.bright_green": "#705F55",
                "terminal.ansi.bright_yellow": "#857BB3",
                "terminal.ansi.bright_blue": "#9E934D",
                "terminal.ansi.bright_magenta": "#CA8A72",
                "terminal.ansi.bright_cyan": "#C2BECB",
                "terminal.ansi.bright_white": "#D8D6DD",

                // Search functionality
                "search.match_background": "#3E3A50",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#757477",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#A4A2A6",

                // Status indicators - success, warning, error, info
                "success": "#705F55",
                "success.background": "#221D1A",
                "success.border": "#705F55",

                "warning": "#857BB3",
                "warning.background": "#272432",
                "warning.border": "#857BB3",

                "error": "#294023",
                "error.background": "#10150E",
                "error.border": "#294023",

                "info": "#9E934D",
