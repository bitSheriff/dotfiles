                    },
                    "string.escape": {
                        "color": "#C2BECB"
                    },
                    "string.regex": {
                        "color": "#C2BECB"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#857BB3"
                    },
                    "constant": {
                        "color": "#857BB3"
                    },
                    "boolean": {
                        "color": "#CA8A72"
                    },

                    // Functions
                    "function": {
                        "color": "#9E934D"
                    },
                    "constructor": {
                        "color": "#9E934D"
                    },

                    // Types
                    "type": {
                        "color": "#CA8A72"
                    },
                    "enum": {
                        "color": "#CA8A72"
                    },

                    // Variables
                    "variable": {
                        "color": "#EAE8ED"
                    },
                    "variable.special": {
                        "color": "#CA8A72"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#9E934D"
                    },
                    "attribute": {
                        "color": "#857BB3"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#C2BECB"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#D3D1D5"
                    },
                    "punctuation.bracket": {
                        "color": "#EAE8ED"
                    },
                    "punctuation.delimiter": {
                        "color": "#D3D1D5"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#294023"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#9E934D"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#705F55"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#9E934D",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#9E934D",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#C2BECB"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#EAE8ED"
                    },
                    "preproc": {
                        "color": "#294023"
                    },
                    "primary": {
                        "color": "#EAE8ED"
                    },
                    "variant": {
                        "color": "#CA8A72"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#BBBABE",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#A4A2A6",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#9E934D",
                        "background": "#9E934D",
                        "selection": "#3F3B22"
                    },
                    {
                        "cursor": "#705F55",
                        "background": "#705F55",
                        "selection": "#2F2924"
                    },
                    {
                        "cursor": "#857BB3",
