{
  // Media Player
  "custom/media": {
    "format": "{}",
    "return-type": "json",
    "max-length": 40,
    "escape": true,
    "exec": "~/.config/waybar/scripts/mediaplayer.py 2> /dev/null", // Script in resources folder
    "on-click" : "playerctl play-pause",
    "on-scroll-down": "playerctl next",
    "on-scroll-up": "playerctl previous",
    "scroll-step": 1,
    "smooth-scrolling-threshold": 10,
  },

  // Workspaces
  "hyprland/workspaces": {
    "active-only": false,
    "format": "{name}",
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1"
  },

  // Hyprland Window
 "hyprland/window": {
    "separate-outputs": true
  },

  // Clock
  "clock": {
    "format": "{:%H:%M}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%m-%d}",
  },

  // Battery
  "battery": {
    "states": {
      "warning": 30,
      "critical": 15,
    },
    "format": "{capacity}% {icon}",
    "format-full": "{capacity}% {icon}",
    "format-charging": "{capacity}% ï—§",
    "format-plugged": "{capacity}% ï‡¦",
    "format-alt": "{time} {icon}",
    "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"],
  },

  // Power Profiles Daemon
  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "ïƒ§",
      "performance": "ïƒ§",
      "balanced": "ï‰",
      "power-saver": "ï¬",
    },
  },

  // Power Button
  "custom/power": {
    "format": "&#x23FB;",
    "tooltip": false,
    "on-click": "wlogout",
    "on-click-right": "hyprlock",
  },

  // Audio Information
  "pulseaudio": {
    "format": "{volume}% {icon} ",
    "format-bluetooth": "{volume}% {icon} ïŠ”",
    "format-bluetooth-muted": "ïš© {icon} ïŠ” ",
    "format-muted": "ïš© {format_source}",
    "format-source": "{volume}% ï„°",
    "format-source-muted": "ï„±",
    "format-icons": {
      "headphone": "ï€¥",
      "hands-free": "ï–",
      "headset": "ï–",
      "phone": "ï‚•",
      "portable": "ï‚•",
      "car": "ï†¹",
      "default": ["ï€¦", "ï€§", "ï€¨"],
    },
    "on-click-right": "pavucontrol",
    "on-click": "~/.config/waybar/scripts/audio_changer.py",
  },

  // Brightness Information
  "backlight": {
    "format": "{percent}% {icon}",
    "format-icons": ["î", "î“", "î‘", "î", "î", "î", "îŠ", "îˆ", "î›"],
  },

  // System Tray
  "tray": {
    "icon-size": 18,
    "spacing": 7,
  },

  // network
  "network": {
	"interface": "wlan0",
	"format": "{ifname}",
	"format-wifi": "{essid} ({signalStrength}%) ï‡«",
	"format-ethernet": "{ifname} ïƒ",
	"format-disconnected": "", //An empty format will hide the module.
	// "format-disconnected": "ï²",
	"tooltip-format": "{ifname}",
	"tooltip-format-wifi": "{essid} ({signalStrength}%) ï‡«",
	"tooltip-format-ethernet": "{ifname} ïƒ",
	"tooltip-format-disconnected": "Disconnected",
	"max-length": 50
},

"bluetooth": {
	"format": "ïŠ” {status}",
	"format-connected": "ïŠ” {device_alias}",
	"format-connected-battery": "ïŠ” {device_alias} {device_battery_percentage}%",
	// "format-device-preference": [ "device1", "device2" ], // preference list deciding the displayed device
	"tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
	"tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
	"tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
	"tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%"
},

// like caffein, prevent from sleeping
"idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
        "activated": "ï®",
        "deactivated": "ï°"
    }, 
    "icon-size": 18,
    "spacing": 7
},

// Hypridle inhibitor
// not needed anymore because Hyprland v0.41 fixed the bug 
"custom/hypridle": {
    "format": "{}{icon}", 
    "format-icons": {
        "activated": "ï®",
        "deactivated": "ï°"
    },
    "return-type": "json",
    // "escape": true,
    "exec-on-event": true,
    "return-type": "json",
    "interval": 1,
    "exec": "~/.config/hypr/scripts/hypridle.sh status",
    "on-click": "~/.config/hypr/scripts/hypridle.sh toggle",
    "icon-size": 18,
    "spacing": 7
},


