alias cat="bat" # better cat command
alias dots="cd $DOTFILES_DIR" # change to the dotfiles directory
alias cd!='cd $(fd  --type d --hidden --exclude .git | fzf --ignore-case --no-preview )' # change directory with fuzzy finder
